<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Checkout\Block\Cart\AbstractCart">
        <plugin name="set-cart-item-details-template" type="Serwach\OmnibusExtension\Plugin\Cart\AbstractCart"/>
    </type>
    <type name="\Magento\Catalog\Pricing\Render\FinalPriceBox">
        <plugin name="change-final-price-template" type="Serwach\OmnibusExtension\Plugin\FinalPricePlugin"/>
    </type>
    <type name="Magento\Framework\Console\CommandList">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="init_historical_price" xsi:type="object">
                    Serwach\OmnibusExtension\Model\InitHistoricalPrice
                </item>
                <item name="set_historical_price" xsi:type="object">
                    Serwach\OmnibusExtension\Model\SetHistoricalAttributes
                </item>
            </argument>
        </arguments>
    </type>
</config>
